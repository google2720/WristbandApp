<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1" >
        <com.canice.wristbandapp.data.StepTextView
            android:id="@+id/text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:minWidth="200dp"
            android:padding="10dp"
            android:textColor="#333" />
    </FrameLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="@dimen/sport_laout_margin_bottom"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/common_rectangle_edit_all_radius"
        android:orientation="horizontal"
        android:weightSum="3" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/text2"
                android:text="0"
                style="@style/style_sport_text_b" />
            <TextView
                style="@style/style_sport_text_s"
                android:drawableLeft="@drawable/pic_foot"

                android:layout_height="40dp"
                android:text="@string/sport_step2" />
        </LinearLayout>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#dedfe1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/text3"

                android:text="0"
                style="@style/style_sport_text_b" />
            <TextView
                style="@style/style_sport_text_s"
                android:layout_height="40dp"
                android:drawableLeft="@drawable/pic_distance"
                android:text="@string/sport_distance" />
        </LinearLayout>
        <View
            android:layout_width="1px"
            android:layout_height="match_parent"
            android:background="#dedfe1" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical" >
            <TextView
                android:id="@+id/text4"

                android:text="0"
                style="@style/style_sport_text_b" />
            <TextView
                style="@style/style_sport_text_s"
                android:drawableLeft="@drawable/pic_fire"
                android:singleLine="false"
                android:layout_height="40dp"
                android:text="@string/sport_energy" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>