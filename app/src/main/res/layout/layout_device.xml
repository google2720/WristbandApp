<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/loginLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/theme_bg"
    android:orientation="vertical" >
    <ImageView
        android:id="@+id/imageview_user_head"
        android:layout_width="120dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:layout_margin="20dp"
        android:scaleType="fitCenter"
        android:src="@drawable/bracelet" />
    <TextView
        android:id="@+id/device_id"
        style="@style/style_personal_text"
        android:layout_gravity="center_horizontal"
        android:gravity="center" />
    <TextView
        android:id="@+id/rl_device_remove"
        style="@style/function_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_line_background"
        android:drawableLeft="@drawable/remove"
        android:drawableRight="@drawable/arrow"
        android:text="@string/device_remove"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:textColor="@color/text_color" />
    <TextView
        android:id="@+id/rl_device_add"
        style="@style/function_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/item_line_background"
        android:drawableLeft="@drawable/add"
        android:drawableRight="@drawable/arrow"
        android:text="@string/device_add"
        android:textAppearance="@android:style/TextAppearance.DeviceDefault.Medium"
        android:textColor="@color/text_color" />
</LinearLayout>